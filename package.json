{
  "name": "simple-api-client",
  "description": "A desktop API Client application built with Vite + React + Electron.",
  "version": "0.2.4",
  "author": {
    "name": "Kybaq",
    "email": "flfsk12@gmail.com"
  },
  "homepage": "https://github.com/kybaq/simple-api-client",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev:web": "vite",
    "dev:electron": "concurrently -k \"tsc -p tsconfig.electron.json -w\" \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron ./dist-electron/main.js\"",
    "build:web": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "start": "electron ./dist-electron/main.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist": "npm run build:web && npm run build:electron && electron-builder",
    "dist:dir": "npm run build:web && npm run build:electron && DEBUG=electron-builder electron-builder --dir"
  },
  "build": {
    "appId": "com.example.apiclient",
    "productName": "API Client",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/ms-icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/apple-icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/linux-icon.png",
      "maintainer": "kybaq <flfsk12@gmail.com>"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "kybaq",
        "repo": "simple-api-client"
      }
    ]
  },
  "dependencies": {
    "axios": "^1.11.0",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  }
}
